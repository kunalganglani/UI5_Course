<mvc:View controllerName="sap.ui.demo.wt.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<App class="myAppDemoWT">
		<pages>
			<Page title="{i18n>homePageTitle}">
				<content>
					<Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
						<content>
							<Input id="input1" valueLiveUpdate="true"/>
							<Input id="input2" valueLiveUpdate="true"/>
							<Button text="+" press="onPressButton" class="sapUiSmallMarginEnd"/>
							<Button text="-" press="onPressButton" class="sapUiSmallMarginEnd"/>
							<Button text="*" press="onPressButton" class="sapUiSmallMarginEnd"/>
							<Button text="/" press="onPressButton" class="sapUiSmallMarginEnd"/>
							<Text id="answer" text="Answer!" class="sapUiSmallMargin"/>
						</content>
					</Panel>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>